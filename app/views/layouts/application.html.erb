<!DOCTYPE html>
<html>
  <head>
    <title>Flopa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= cloudinary_js_config %>
    
  </head>

  <body>
    <nav>
      <% if @current_user.present? %>
        <% if @current_user.admin? %>
          <%= link_to 'All Users', users_path %>
        <% end %>  
        <span> Hi <%= @current_user.name.capitalize %></span> 
        <span><%= link_to 'Home', flopa_path %></span> 
        <span><%= link_to 'My Cart', @current_user.orders.last %></span>

        <span><%= link_to 'My Orders', orders_path %></span> 
        <span><%= link_to "Sign out", login_path, :method => 'delete' %></span>

        <%= form_tag products_path, :method => 'get' do %>
            <p>
              <%= text_field_tag :query, params[:query] %>
              <%= submit_tag 'Search', :name => nil %>
            </p>
        <% end %>
      
      <% else %>
        <%= link_to 'Sign Up', new_user_path %>
        <%= link_to 'Sign In', login_path %>
      <% end %> 
    </nav>
    <%= yield %>
  </body>
</html>
